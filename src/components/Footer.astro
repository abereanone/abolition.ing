---
import { siteSettings } from "@/config/siteSettings";

const siteName = siteSettings.branding.siteName;
const legalText = siteSettings.footer.legalText;
const legalLinkLabel = siteSettings.footer.legalLinkLabel;
---

<footer class="site-footer">
  <div class="footer-search">
    <a href="/search" class="footer-search-link">Search {siteName}</a>
  </div>
  <p>
    <a href="/about">{siteName}</a> - {legalText}
    <a href="/copyright">{legalLinkLabel}</a>
  </p>
</footer>

<style>
  .site-footer {
    text-align: center;
    margin-top: 2rem;
    padding-bottom: 4rem;
  }

  .footer-search {
    margin-bottom: 0.75rem;
  }

  .footer-search-link {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.1);
    color: #f5f5f5;
    font-weight: 600;
    text-decoration: none;
  }

  .footer-search-link:hover {
    background: rgba(255, 255, 255, 0.2);
  }
</style>
