---
import { siteSettings } from "@/config/siteSettings";

const version = siteSettings.version;
const branding = siteSettings.branding;
const logoSrc = branding.logoPath;
const logoAlt = branding.logoAlt || `${branding.siteName} logo`;
---

<header class="navbar">
  <a href="/" class="logo">
    <img src={logoSrc} alt={logoAlt} />
  </a>

  <nav>
    <a href="/">Home</a>
    <a href="/resources">Resources</a>
    <a href="/about">About</a>
    <a href="/search">Search</a>
  </nav>

  <span class="build-version" data-build-version={version} aria-hidden="true"></span>
</header>

<style>
  .navbar {
    position: sticky;
    top: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background-color: #000;
    color: #f2f2f2;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
  }

  .logo img {
    height: 150px;
    width: auto;
  }

  nav a {
    margin-left: 1.75rem;
    text-decoration: none;
    color: #f2f2f2;
    font-weight: 600;
    font-size: 1.3rem;
    letter-spacing: 0.01em;
  }

  nav a:hover {
    text-decoration: underline;
  }

  .build-version {
    display: inline-block;
    font-size: 0;
    width: 0;
    height: 0;
    overflow: hidden;
  }

  /* âœ… Mobile styles */
  @media (max-width: 768px) {
    .navbar {
      flex-direction: column;
      align-items: center;
      padding: 0.5rem 1rem;
    }

    .logo img {
      height: 80px; /* smaller logo on mobile */
    }

    nav {
      margin-top: 0.5rem;
    }

    nav a {
      margin: 0 0.85rem;
      font-size: 1.15rem;
    }
  }
</style>
